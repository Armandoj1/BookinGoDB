<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <!-- Hace que el botón Run de NetBeans ejecute JavaFX -->
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>

    <!-- Opción de depuración; NetBeans usará el mismo goal -->
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>

    <!-- Perfilado, también con JavaFX -->
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>
</actions>
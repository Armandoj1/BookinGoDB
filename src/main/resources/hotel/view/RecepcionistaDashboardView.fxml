<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.RecepcionistaDashboardController"
            fitToWidth="true"
            style="-fx-background: #F7F9FC; -fx-background-color: #F7F9FC;">

    <VBox spacing="25" style="-fx-background-color: #F7F9FC;">
        <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

        <!-- Header con Fecha y Hora -->
        <HBox alignment="CENTER_LEFT" spacing="0">
            <VBox HBox.hgrow="ALWAYS">
                <Label text="Dashboard - Recepción" 
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Resumen del estado actual del hotel" 
                       style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
            </VBox>
            <VBox alignment="TOP_RIGHT">
                <Label text="Fecha de Hoy" 
                       style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                <Label fx:id="lblFechaHora" text="Sábado, 22 De Noviembre De 2025" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="lblUsuario" text="Maria Rodriguez - Turno (10:03)" 
                       style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
            </VBox>
        </HBox>

        <!-- Tarjetas de Métricas Principales -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <!-- Check-ins Hoy (Verde) -->
            <VBox GridPane.columnIndex="0" spacing="8" 
                  style="-fx-background-color: #4ade80; -fx-background-radius: 12; -fx-padding: 20;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox VBox.vgrow="ALWAYS">
                        <Label text="Check-ins Hoy" 
                               style="-fx-font-size: 13px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                        <Label fx:id="lblCheckInsHoy" text="0" 
                               style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="Pendientes" 
                               style="-fx-font-size: 11px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <!-- Check-outs Hoy (Rojo) -->
            <VBox GridPane.columnIndex="1" spacing="8" 
                  style="-fx-background-color: #ef4444; -fx-background-radius: 12; -fx-padding: 20;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox VBox.vgrow="ALWAYS">
                        <Label text="Check-outs Hoy" 
                               style="-fx-font-size: 13px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                        <Label fx:id="lblCheckOutsHoy" text="0" 
                               style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="Pendientes" 
                               style="-fx-font-size: 11px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <!-- Habitaciones Disponibles (Azul) -->
            <VBox GridPane.columnIndex="2" spacing="8" 
                  style="-fx-background-color: #60a5fa; -fx-background-radius: 12; -fx-padding: 20;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox VBox.vgrow="ALWAYS">
                        <Label text="Habitaciones Disponibles" 
                               style="-fx-font-size: 13px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                        <Label fx:id="lblHabDisponibles" text="3" 
                               style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="De 6 totales" 
                               style="-fx-font-size: 11px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <!-- Habitaciones Ocupadas (Morado) -->
            <VBox GridPane.columnIndex="3" spacing="8" 
                  style="-fx-background-color: #a78bfa; -fx-background-radius: 12; -fx-padding: 20;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <VBox VBox.vgrow="ALWAYS">
                        <Label text="Habitaciones Ocupadas" 
                               style="-fx-font-size: 13px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                        <Label fx:id="lblHabOcupadas" text="2" 
                               style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="Ocupación: 33%" 
                               style="-fx-font-size: 11px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </GridPane>

        <!-- Check-ins Pendientes -->
        <VBox spacing="15" styleClass="dashboard-card" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Check-ins Pendientes" 
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblBadgePendientes" text="0" 
                       style="-fx-background-color: #fef3c7; -fx-text-fill: #92400e; -fx-padding: 4 12; -fx-background-radius: 12; -fx-font-weight: bold; -fx-font-size: 14px;"/>
            </HBox>
            
            <Label text="No hay check-ins pendientes para hoy" 
                   style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-padding: 20 0;"/>
        </VBox>

    </VBox>
</ScrollPane>

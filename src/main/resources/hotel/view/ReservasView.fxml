<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ReservasController"
            fitToWidth="true"
            style="-fx-background: #F7F9FC; -fx-background-color: #F7F9FC;">

    <VBox spacing="25" style="-fx-background-color: #F7F9FC;">
        <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="0">
            <VBox HBox.hgrow="ALWAYS">
                <Label text="Gestión de Reservas" 
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Administrar reservas del hotel" 
                       style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
            </VBox>
            <Button fx:id="btnNuevaReserva" text="+ Nueva Reserva" 
                    onAction="#handleNuevaReserva"
                    styleClass="btn-primary"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24; -fx-cursor: hand;"/>
            <Button fx:id="btnEditarReserva" text="Editar Reserva" 
                    onAction="#handleEditarReserva"
                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24; -fx-cursor: hand;">
                <HBox.margin>
                    <Insets left="10"/>
                </HBox.margin>
            </Button>
        </HBox>

        <!-- Tarjetas de Métricas -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <!-- Total Reservas -->
            <VBox GridPane.columnIndex="0" spacing="8" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <VBox>
                        <Label text="Total Reservas" 
                               style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        <Label fx:id="lblTotalReservas" text="2" 
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Confirmadas -->
            <VBox GridPane.columnIndex="1" spacing="8" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <VBox>
                        <Label text="Confirmadas" 
                               style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        <Label fx:id="lblConfirmadas" text="2" 
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Pendientes Check-in -->
            <VBox GridPane.columnIndex="2" spacing="8" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <VBox>
                        <Label text="Pendientes Check-in" 
                               style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        <Label fx:id="lblPendientesCheckIn" text="0" 
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #f59e0b;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Activas -->
            <VBox GridPane.columnIndex="3" spacing="8" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <VBox>
                        <Label text="Activas" 
                               style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                        <Label fx:id="lblActivas" text="0" 
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #8b5cf6;"/>
                    </VBox>
                </HBox>
            </VBox>
        </GridPane>

        <!-- Tabla de Reservas -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <TableView fx:id="tblReservas" style="-fx-background-color: transparent;">
                <columns>
                    <TableColumn fx:id="colId" text="ID Reserva" prefWidth="90"/>
                    <TableColumn fx:id="colIdCliente" text="ID Cliente" prefWidth="100"/>
                    <TableColumn fx:id="colDocumento" text="Documento" prefWidth="140"/>
                    <TableColumn fx:id="colIdTrabajador" text="ID Trabajador" prefWidth="110"/>
                    <TableColumn fx:id="colIdHabitacion" text="ID Habitación" prefWidth="110"/>
                    <TableColumn fx:id="colFechaReserva" text="Fecha Reserva" prefWidth="120"/>
                    <TableColumn fx:id="colEntrada" text="Fecha Entrada" prefWidth="120"/>
                    <TableColumn fx:id="colSalida" text="Fecha Salida" prefWidth="120"/>
                    <TableColumn fx:id="colTipoReserva" text="Tipo Reserva" prefWidth="120"/>
                    <TableColumn fx:id="colObservacion" text="Observación" prefWidth="160"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>

    </VBox>
</ScrollPane>

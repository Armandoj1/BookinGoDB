<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.NuevaReservaController">
    <center>
        <VBox spacing="14" style="-fx-padding: 18;">
            <Label fx:id="lblTitulo" text="Nueva Reserva" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>

            <GridPane hgap="12" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <Label text="Documento del Cliente *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtDocumento" promptText="Ingrese documento" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <Label text="HabitaciÃ³n *" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <ComboBox fx:id="cbHabitacion" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Fecha Entrada *" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <DatePicker fx:id="dpEntrada" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                <Label text="Fecha Salida *" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <DatePicker fx:id="dpSalida" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Tipo de Reserva" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbTipoReserva" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

                <Label text="Observaciones" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextArea fx:id="txtObservacion" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" prefRowCount="3"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="lblTotal" text="Total: S/ 0.00"
                       style="-fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Cancelar" onAction="#handleCancelar"
                        style="-fx-background-color: #e5e7eb; -fx-text-fill: #111827; -fx-background-radius: 8; -fx-padding: 8 16;"/>
                <Button fx:id="btnGuardar" text="Crear Reserva" onAction="#handleCrear"
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
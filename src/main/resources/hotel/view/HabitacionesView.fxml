            </VBox>
            <Button fx:id="btnNuevaHabitacion" text="+ Nueva Habitaci칩n" 
                    onAction="#handleNuevaHabitacion"
                    styleClass="btn-primary"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24; -fx-cursor: hand;"/>
        </HBox>

        <!-- Grid de Habitaciones -->
        <GridPane fx:id="gridHabitaciones" hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>
            
            <!-- Las habitaciones se cargar치n din치micamente desde el controlador -->
        </GridPane>

    </VBox>
</ScrollPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.NuevoComprobanteController">
    <center>
        <VBox spacing="14" style="-fx-padding: 18;">
            <Label fx:id="lblTitulo" text="Nuevo Comprobante" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>

            <GridPane hgap="12" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <Label text="Reserva *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="cbReserva" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <Label text="Fecha Emisión *" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <DatePicker fx:id="dpFechaEmision" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Tipo *" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cbTipo" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                <Label text="Método de Pago *" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cbMetodoPago" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Monto Total (S/) *" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="txtMontoTotal" promptText="0.00" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

                <Label text="Estado *" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbEstado" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Descripción *" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextArea fx:id="txtDescripcion" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" prefRowCount="3"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Cancelar" onAction="#handleCancelar"
                        style="-fx-background-color: #e5e7eb; -fx-text-fill: #111827; -fx-background-radius: 8; -fx-padding: 8 16;"/>
                <Button fx:id="btnGuardar" text="Crear Comprobante" onAction="#handleCrear"
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>